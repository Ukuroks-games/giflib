{
    "command": "make",
    "linux": {
        "args": [
            "-j$(nproc)"
        ]
    },
    "osx": {
        "args": [
            "-j$(nproc)"
        ],
    },
    
    "tasks": [
        {
            "type": "shell",
            "label": "Build",
            "detail": "Build tests place",
            "args": [
                "tests"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Generate sourcemap",
            "detail": "Generate sourcemap",
            "args": [
                "sourcemap"
            ],
            "group": {
                "kind": "none"
            },
        },
        {
            "type": "shell",
            "label": "Install programms",
            "detail": "Install programms using aftman",
            "args": [
                "aftman-install"
            ],
            "group": {
                "kind": "none"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Install depends",
            "detail": "Install all project depends",
            "args": [
                "./Packages"
            ],
            "group": {
                "kind": "none"
            },
            "problemMatcher": [],
        },
        {
            "type": "shell",
            "label": "Build rbxm",
            "detail": "Build rbxm library",
            "args": [
                "rbxm"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "Clean",
            "detail": "Clean builded",
            "args": [
                "clean"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "Publish",
            "detail": "Publish this as wally package",
            "args": [
                "publish"
            ],
            "group": {
                "kind": "none"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Build docs",
            "detail": "Build html docs",
            "args": [
                "docs"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "Watch docs changes",
            "detail": "Build html docs and watch changes in sources",
            "args": [
                "docs-dev",
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "isBackground": true
        }
    ],
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd",
                "args": [
                    "/k"
                ]
            }
        }
    },
    "version": "2.0.0"
}